rules_version = '2';
service cloud.firestore {
  match /databases/management-data/documents {
    // Allow users to read/write their own profile
    match /management-users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Only allow users with the 'admin' or 'editor' role to write to a 'management-users' collection
    match /management-users/{userId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/management-data/documents/management-users/$(request.auth.uid)).data.role in ['admin', 'editor'];
    }
  }
}
